//https://docs.google.com/viewerng/viewer?url=https://neoj.sprout.tw/api/problem/140/static/cont.pdf
#include<bits/stdc++.h>
using namespace std;
long long int t,s[100005][3]={};
int main(){
    cin >> t;
    s[1][0]=1;//紅色
    s[1][1]=1;//藍色
    s[1][2]=1;//綠色
    for(int i=2;i<100003;i++){
        s[i][0] = s[i-1][0]+s[i-1][1]+s[i-1][2];
        s[i][1] = s[i-1][0]+s[i-1][1];
        s[i][2] = s[i-1][0]+s[i-1][2];
        s[i][0]%=1000007;
        s[i][1]%=1000007;
        s[i][2]%=1000007;
    }
    while(t--){
        int n;
        cin >> n;
        if(n>=3)
            cout << (s[n][0]+s[n][1]+s[n][2]-2)%1000007<<endl;//將頭尾是藍綠的減掉
        else
            cout << (s[n][0]+s[n][1]+s[n][2])%1000007<<endl;
    }
}
