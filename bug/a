#include<bits/stdc++.h>
using namespace std;
float tonum(string s){
    float ans=0;
    int add =0,st=0;
    for(int i=0;i<s.size();i++){
        if(s[i]=='.'){
            st=1;
            continue;
        }
        ans*=10;
        if(st)add++;
        ans+=s[i]-'0';
    }
    for(int i=0;i<add;i++){
        ans/=10;
    }
    return ans;
}
int main(){
    string s[5];
    while(cin >> s[0]>>s[1]>>s[2]>>s[3]>>s[4]){
        float se=0,ans=0;
        if(s[0][0]=='x'){
            se=tonum(s[2]);
        }else if(s[2][0]=='x'){
            se=tonum(s[0]);
        }
        ans=tonum(s[4]);
//        cout << se<<" "<<ans<<endl;
        if(s[1][0]=='+'){
            if(s[0][0]=='x'){
                printf("%.1f\n",floor((ans-se)*10)/10);
            }else if(s[2][0]=='x'){
                printf("%.1f\n",floor((ans-se)*10)/10);
            }
        }else if(s[1][0]=='-'){
            if(s[0][0]=='x'){
                printf("%.1f\n",floor((se+ans)*10)/10);
            }else if(s[2][0]=='x'){
                printf("%.1f\n",floor((se-ans)*10)/10);
            }
        }else if(s[1][0]=='*'){
            if(s[0][0]=='x'){
                printf("%.1f\n",floor((ans/se)*10)/10);
            }else if(s[2][0]=='x'){
                printf("%.1f\n",floor((ans/se)*10)/10);
            }
        }else if(s[1][0]=='/'){
            if(s[0][0]=='x'){
                printf("%.1f\n",floor((ans*se)*10)/10);
            }else if(s[2][0]=='x'){
                printf("%.1f\n",floor((se/ans)*10)/10);
            }
        }
    }
}
