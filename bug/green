#include<algorithm>
#include<iostream>
using namespace std;
struct cus{
    int st,us;
};
bool ad (cus a,cus b){
    return a.st<b.st;
}
int main(){
    int n;
    cin >> n;
    cus d[1005];
    for(int i=0;i<n;i++){
        cin >> d[i].st>>d[i].us;
    }
//    sort(d,d+n,ad);
    int max=0;
    int allt=0;
    for(int i=0;i<n;i++){
        int now=0;
        allt=d[i].us;
        for(int q=i+1;q<n;q++){
            d[q].st-=d[i].st;
            if(d[q].st<=allt)
                now++;
            if(now>max)
                max=now;
        }
    }
    cout<< max;
}
