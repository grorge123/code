int main(){
    int N,Q;
    scanf("%d %d",&N,&Q);
    build(1,1,N);
//    for(int i=0;i<20;i++){
//        cout << s[i]<<" ";
//    }
//    cout << endl;
//    for(int i=0;i<20;i++){
