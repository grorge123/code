//    cout << endl;
//    for(int i=0;i<20;i++){
//        cout << sr[i]<<" ";
//    }
//    cout << endl;
    for(int i=0;i<Q;i++){
        int a,b;
        scanf("%d %d",&a,&b);
        long long int ans=query_line(a,b,1,1,N,0);
//        printf("%d\n",query_line2(a,b,1,1,N));
        cout <<(ans>0?ans:0)<<endl;
    }

}
