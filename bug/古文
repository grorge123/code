#include <cstdio>
int check(int res,int A[100005],int n,int m) {
    int sum = 0, cnt = 0, i;
    for(i = 0; i <= n; i++) {
        if(A[i] > res)  return 0;
        if(sum+A[i] > res)
            sum = A[i], cnt++;
        else
            sum += A[i];
    }
    if(sum) cnt++;
    return cnt <= m;
}
int main() {
    int t=0;
    scanf("%d",&t);
    while(t--) {
        int n,m;
        scanf("%d %d", &n, &m);
        int w,A[100005],i;
        for(i = 0; i < n; i++){
            scanf("%d",&w);
            A[i] = w;
        }
        int l = 0, r = 100000, mid;
        while(l <= r) {
            mid = (l+r)/2;
            if(check(mid,A,n,m))
                r = mid-1;
            else
                l = mid+1;
        }
        printf("%d\n", r+1);
    }
    return 0;
}
