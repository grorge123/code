#include<stdio.h>
#include<stdlib.h>
#include<string.h>
int main(){
    int n,buttom=0,all=0;
    scanf("%d",&n);
    while(n>0){
        n--;
        buttom++;
        all++;
    }
    while(buttom>=3){
        buttom++;
        buttom-=4;
        all++;
    }
    printf("%d",all);
    return 0;
}
